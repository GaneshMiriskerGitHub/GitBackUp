package packagee19_Dynamic_Programming;

import java.util.Arrays;

public class A4_Longest_Increasing_Path_In_Matrix {
	
	public int longestIncreasingPath(int[][] matrix) {

        int[][] memo = new int[matrix.length][matrix[0].length];
        for(int i=0;i<memo.length;i++) {
            Arrays.fill(memo[i], -1);
        }
        return dfs(matrix, 0, 0, memo);
        
    }

    public static int dfs(int[][] matrix, int i, int j, int[][] memo) {
    	
    	if(i == matrix.length && j == matrix[i].length) {
    		return 1;
    	}

        if(memo[i][j] != -1) {
            return memo[i][j];
        }

        // right
        int rightDFS = 0; 
        if(j<matrix[i].length && matrix[i][j] < matrix[i][j+1]) {
            rightDFS = 1+dfs(matrix, i, j+1, memo);
        }else{
            rightDFS = 1;
        }

        //left 
        int leftDFS = 0;
        if(j>0 && matrix[i][j] < matrix[i][j-1]) {
             leftDFS = 1+dfs(matrix, i, j-1, memo);
        }else{
            leftDFS = 1;
        }

        //down
        int downDFS = 0;
        if(i<matrix.length && matrix[i][j] < matrix[i+1][j]) {
            downDFS = 1+dfs(matrix, i+1, j, memo);
        }else{
            downDFS = 1;
        }

        // up
        int upDFS = 0;
        if(i>0 && matrix[i][j] < matrix[i-1][j]) {
            upDFS = 1+dfs(matrix, i-1, j, memo);
        }else{
            upDFS = 1;
        }

        memo[i][j] = Math.max(rightDFS, Math.max(leftDFS, Math.max(downDFS, upDFS)));

        return memo[i][j];
    }

	public static void main(String[] args) {
		
		int[][] matrix = {{3,4,5},{3,2,6},{2,2,1}};

	}

}
