	public static int longestIncreasingPath(int[][] matrix) {

        int[][] memo = new int[matrix.length][matrix[0].length];
        for(int i=0;i<memo.length;i++) {
            Arrays.fill(memo[i], -1);
        }
        return dfs(matrix, 0, 0, memo);
        
    }

